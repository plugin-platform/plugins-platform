{
	"compilerOptions": {
		"target": "esnext",
		"allowJs": true,
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"types": ["naive-ui/volar"]
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts"]
}
